@model Accounting.Models.InvitationViewModels.InvitationViewModel

@{
    ViewData["Title"] = "Invitation - " + ConfigurationSingleton.Instance.ApplicationName;
}

@{
  string headerText = "Invitation";
}
<partial name="_H1HeaderPartial" model="@headerText" />

<form asp-action="Invitation" asp-controller="Invitation" method="post" class="display-flex flex-direction-column">
    <input asp-for="Guid" type="hidden" />

    <div class="display-flex flex-direction-column">
        <label asp-for="Email"></label>
        <input asp-for="Email" readonly class="margin-bottom-5px font-size-20px background-color-gainsboro" />
    </div>

    <div class="display-flex flex-direction-column">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="margin-bottom-5px font-size-20px" />
    </div>
    <div class="display-flex flex-direction-column">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" class="margin-bottom-5px font-size-20px" />
    </div>

    <button type="submit" class="full-width-regular-button">Accept Invitation</button>
</form>

@if (Model != null && Model.ValidationResult != null)
{
    foreach (var error in Model.ValidationResult.Errors)
    {
        <div>
            <small class="color-red">@error.ErrorMessage</small>
        </div>
    }
}