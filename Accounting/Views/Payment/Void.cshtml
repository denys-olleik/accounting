@model Accounting.Models.PaymentViewModels.PaymentVoidViewModel

@{
  ViewData["Title"] = "Void Payment - " + ConfigurationSingleton.Instance.ApplicationName;
}

@{
  string headerText = "Void Payment";
}
<partial name="_H1HeaderPartial" model="@headerText" />

<form asp-action="Void" asp-controller="Payment" method="post" class="display-flex flex-direction-column">
  <div class="display-flex flex-direction-column box-shaddow">
    <label asp-for="ReferenceNumber" class="background-color-antiquewhite color-darkslategray">Reference Number</label>
    <input asp-for="ReferenceNumber" class="margin-bottom-5px font-size-20px color-darkslategray background-color-antiquewhite" disabled />
  </div>
  <div class="display-flex flex-direction-column margin-bottom-5px box-shaddow">
    <label asp-for="VoidReason" class="background-color-antiquewhite color-darkslategray">Reason</label>
    <textarea asp-for="VoidReason" class="font-size-20px color-darkslategray" rows="6"></textarea>
  </div>

  <input type="hidden" asp-for="PaymentID" />

  <div class="display-flex">
    <div class="flex-1">
    </div>
    <div class="flex-1">
      <button type="submit" class="full-width-regular-button width-100">Void Payment</button>
    </div>
  </div>
</form>

@if (Model != null && Model.ValidationResult != null)
{
  foreach (var error in Model.ValidationResult.Errors)
  {
    <div>
      <small class="color-red">@error.ErrorMessage</small>
    </div>
  }
  <div class="margin-bottom-5px">
  </div>
}