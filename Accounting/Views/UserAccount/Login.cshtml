@model Accounting.Models.UserAccountViewModels.LoginViewModel

@{
  ViewData["Title"] = "Log in - " + ConfigurationSingleton.Instance.ApplicationName;
}

@{
  string headerText = "Log in";
}
<partial name="_H1HeaderPartial" model="@headerText" />

<form asp-action="Login" asp-controller="UserAccount" method="post" class="display-flex flex-direction-column">
  <div class="display-flex flex-direction-column">
    <label asp-for="Email" class="background-color-antiquewhite"></label>
    <input asp-for="Email" class="margin-bottom-5px font-size-20px font-Roboto-Mono" />
  </div>
  <div class="display-flex flex-direction-column">
    <label asp-for="Password" class="background-color-antiquewhite">Password (optional)</label>
    <input asp-for="Password" type="password" class="margin-bottom-5px font-size-20px font-Roboto-Mono" placeholder="optional" />
  </div>

  <button type="submit" class="full-width-regular-button">Next</button>
</form>

@if (Model != null && Model.ValidationResult != null)
{
  foreach (var error in Model.ValidationResult.Errors)
  {
    <div>
      <small class="color-red">@error.ErrorMessage</small>
    </div>
  }
}

<script>
  window.onload = function() {
    var emailInput = document.querySelector('input[name="Email"]');
    var passwordInput = document.querySelector('input[name="Password"]');
    if (emailInput && emailInput.value) {
      passwordInput.focus();
    }
  };
</script>m