@model Accounting.Models.UserAccountViewModels.LoginWithoutPasswordViewModel

@{
  ViewData["Title"] = " Login Without Password - " + ConfigurationSingleton.Instance.ApplicationName;
}

@{
  string headerText = " Login Without Password";
}

<partial name="_H1HeaderPartial" model="@headerText" />

<form asp-action="LoginWithoutPassword" asp-controller="UserAccount" class="display-flex flex-direction-column">
  
  <div class="background-color-antiquewhite text-align-center font-weight-600 margin-bottom-5px">check your email</div>
  
  <div class="display-flex flex-direction-column">
    <label asp-for="Email" class="background-color-antiquewhite"></label>
    <input asp-for="Email" class="margin-bottom-5px font-size-20px font-Roboto-Mono" disabled />
  </div>

  <div class="display-flex flex-direction-column">
    <label asp-for="Code" class="background-color-antiquewhite">Code</label>
    <input asp-for="Code" class="margin-bottom-5px font-size-20px font-Roboto-Mono" />
  </div>

  <button type="submit" class="full-width-regular-button">Login</button>
</form>

@if (Model != null && Model.ValidationResult != null)
{
  foreach (var error in Model.ValidationResult.Errors)
  {
    <div>
      <small class="color-red">@error.ErrorMessage</small>
    </div>
  }
}