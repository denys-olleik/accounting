@model Accounting.Models.AccountViewModels.ChooseOrganizationViewModel

@{
  ViewData["Title"] = "Choose Organization - " + ConfigurationSingleton.Instance.ApplicationName;
}

@{
  string headerText = "Choose Organization";
}
<partial name="_H1HeaderPartial" model="@headerText" />


<form asp-action="ChooseOrganization" asp-controller="UserAccount" method="post" class="display-flex flex-direction-column">
  <div class="display-flex flex-direction-column">
    <label asp-for="OrganizationId" class="background-color-white">Organization</label>

    <select asp-for="OrganizationId" asp-items="Model.Organizations" class="border-bottom-2px-solid-1a3b56 margin-bottom-5px font-size-20px font-Roboto-Mono">
      <option value="" class="font-Roboto">Select an organization</option>
    </select>
  </div>

  <button type="submit" class="full-width-regular-button">Choose Organization</button>
</form>

@if (Model != null && Model.ValidationResult != null)
{
  foreach (var error in Model.ValidationResult.Errors)
  {
    <div>
      <small class="color-red">@error.ErrorMessage</small>
    </div>
  }
}