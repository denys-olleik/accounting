@model Accounting.Models.PlaylistLoverViewModels.ProcessLoverViewModel

@{
  ViewData["Title"] = "Process Lover - " + ConfigurationSingleton.Instance.ApplicationName;
}

<script src="~/js/vue-3-5-13.js" asp-append-version="true"></script>

@{
  string headerText = "Process Lover";
}
<partial name="_H1HeaderPartial" model="@headerText" />

<form asp-action="ProcessLover" asp-controller="PlaylistLover" method="post"
      class="display-flex flex-direction-column margin-bottom-5px">
  <div class="display-flex flex-direction-column">
    <label asp-for="Email" class="background-color-antiquewhite"></label>
    <input asp-for="Email" class="margin-bottom-5px font-size-20px font-Roboto-Mono" />
  </div>
  <div class="display-flex flex-direction-column">
    <label asp-for="Address" class="background-color-antiquewhite">On Repeat Spotify playlist</label>
    <input asp-for="Address" type="url" class="margin-bottom-5px font-size-20px font-Roboto-Mono" />
  </div>

  <button type="submit" class="full-width-regular-button">Submit</button>
</form>

@if (Model != null && Model.ValidationResult != null)
{
  foreach (var error in Model.ValidationResult.Errors)
  {
    <div>
      <small class="color-red">@error.ErrorMessage</small>
    </div>
  }
}