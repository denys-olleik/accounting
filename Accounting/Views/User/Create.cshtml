@model Accounting.Models.UserViewModels.CreateUserViewModel

@{
    ViewData["Title"] = "Create User - " + ConfigurationSingleton.Instance.ApplicationName;
}

@{
  string headerText = "Create User";
}
<partial name="_H1HeaderPartial" model="@headerText" />

<form asp-action="Create" asp-controller="User" method="post" class="display-flex flex-direction-column">
    <div class="display-flex flex-direction-column">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="margin-bottom-5px font-size-20px" />
    </div>
    <div class="display-flex max-width-768-flex-direction-column">
        <div class="flex-1 display-flex flex-direction-column">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="margin-bottom-5px font-size-20px" />
        </div>
        <div class="width-5px"></div>
        <div class="flex-1 display-flex flex-direction-column">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="margin-bottom-5px font-size-20px" />
        </div>
    </div>
    <div class="display-flex flex-direction-column margin-bottom-5px">
        <div>
            <input asp-for="SendInvitationEmail" type="checkbox" />
            <label asp-for="SendInvitationEmail">Send Invitation Email</label>
        </div>
    </div>
    <button type="submit" class="full-width-regular-button">Create User</button>
</form>

@if (Model != null && Model.ValidationResult != null)
{
    foreach (var error in Model.ValidationResult.Errors)
    {
        <div>
            <small class="color-red">@error.ErrorMessage</small>
        </div>
    }
}