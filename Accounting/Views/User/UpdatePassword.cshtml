@model Accounting.Models.UserViewModels.UpdatePasswordViewModel

@{
  ViewData["Title"] = "Update password - " + ConfigurationSingleton.Instance.ApplicationName;
}

@{
  string headerText = "Update password";
}

<partial name="_H1HeaderPartial" model="@headerText" />

<form asp-action="UpdatePassword" asp-asp-controller="User" method="post"
      class="display-flex flex-direction-column margin-bottom-5px">
  <div class="display-flex flex-direction-column margin-bottom-5px background-color-antiquewhite">
    <label asp-for="NewPassword">New password</label>
    <input asp-for="NewPassword" class="font-size-20px" type="password" />
  </div>

  <div class="display-flex flex-direction-column margin-bottom-5px background-color-antiquewhite">
    <label asp-for="ConfirmPassword">Confirm password</label>
    <input asp-for="ConfirmPassword" class="font-size-20px" type="password" />
  </div>

  <div class="display-flex">
    <div class="flex-1">
      <button class="full-width-regular-button width-100" type="button" onclick="event.preventDefault(); window.location.href='@Url.Action("Index", "Home")';">Cancel</button>
    </div>
    <div class="width-5px"></div>
    <div class="flex-1">
      <button type="submit" class="full-width-regular-button width-100">Update password</button>
    </div>
  </div>
</form>

@if (Model != null && Model.ValidationResult != null)
{
  foreach (var error in Model.ValidationResult.Errors)
  {
    <div>
      <small class="color-red">@error.ErrorMessage</small>
    </div>
  }
}