@model Accounting.Models.UserViewModels.DeleteUserViewModel

@{
  ViewData["Title"] = "Delete user - " + ConfigurationSingleton.Instance.ApplicationName;
}

@{
  string headerText = "Delete user";
}
<partial name="_H1HeaderPartial" model="@headerText" />

<form asp-action="Delete" asp-controller="User" method="post"
      class="display-flex flex-direction-column margin-bottom-5px">

  <input asp-for="UserID" type="hidden" />

  <div class="display-flex">
    <div class="display-flex flex-1 flex-direction-column background-color-antiquewhite margin-bottom-5px">
      <label asp-for="Email">Email</label>
      <input asp-for="Email" class="font-size-20px" readonly />
    </div>
  </div>

  <div class="display-flex">
    <div class="display-flex flex-1 flex-direction-column background-color-antiquewhite margin-bottom-5px">
      <label asp-for="FirstName">First Name</label>
      <input asp-for="FirstName" class="font-size-20px" readonly />
    </div>
    <div class="width-5px"></div>
    <div class="display-flex flex-1 flex-direction-column background-color-antiquewhite margin-bottom-5px">
      <label asp-for="LastName">Last Name</label>
      <input asp-for="LastName" class="font-size-20px" readonly />
    </div>
  </div>

  <div class="display-flex flex-1 flex-direction-column background-color-antiquewhite margin-bottom-5px">
    <span>
      <input asp-for="DeleteReferences" class="font-size-20px" readonly />
      <label asp-for="DeleteReferences">Delete references</label>
    </span>
  </div>

  <div class="display-flex">
    <div class="flex-1">
      <button class="full-width-regular-button width-100" type="button" onclick="event.preventDefault(); window.location.href='@Url.Action("Users", "User")';">Cancel</button>
    </div>
    <div class="width-5px"></div>
    <div class="flex-1">
      <button type="submit" class="full-width-orange-red-button width-100">Delete</button>
    </div>
  </div>
</form>

@if (Model != null && Model.ValidationResult != null)
{
  foreach (var error in Model.ValidationResult.Errors)
  {
    <div>
      <small class="color-red">@error.ErrorMessage</small>
    </div>
  }
  <div class="margin-bottom-5px">
  </div>
}