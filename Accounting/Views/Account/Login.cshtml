@model Accounting.Models.AccountViewModels.LoginViewModel

@{
  ViewData["Title"] = "Log In - " + ConfigurationSingleton.Instance.ApplicationName;
}

@{
  string headerText = "Log In";
}
<partial name="_H1HeaderPartial" model="@headerText" />

<form asp-action="Login" asp-controller="Account" method="post" class="display-flex flex-direction-column">
  <div class="display-flex flex-direction-column">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="border-bottom-2px-solid-1a3b56 margin-bottom-5px font-size-20px" />
  </div>
  <div class="display-flex flex-direction-column">
    <label asp-for="Password"></label>
    <input asp-for="Password" type="password" class="border-bottom-2px-solid-1a3b56 margin-bottom-5px font-size-20px" />
  </div>

  <button type="submit" class="full-width-regular-button">Next</button>
</form>

@if (Model != null && Model.ValidationResult != null)
{
  foreach (var error in Model.ValidationResult.Errors)
  {
    <div>
      <small class="color-red">@error.ErrorMessage</small>
    </div>
  }
}