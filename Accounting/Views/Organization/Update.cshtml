@model Accounting.Models.OrganizationViewModels.UpdateOrganizationViewModel

@{
  ViewData["Title"] = "Update organization - " + ConfigurationSingleton.Instance.ApplicationName;
}

@{
  string headerText = "Update organization";
}
<partial name="_H1HeaderPartial" model="@headerText" />

<form asp-action="Update" asp-controller="Organization" method="post" class="display-flex flex-direction-column">
  <div class="display-flex flex-direction-column margin-bottom-5px">
    <label asp-for="Name" class="background-color-antiquewhite">Organization name</label>
    <input asp-for="Name" class="font-size-20px font-Roboto-Mono" />
  </div>
  <div class="display-flex flex-direction-column margin-bottom-5px">
    <label asp-for="Address" class="background-color-antiquewhite">Address</label>
    <textarea asp-for="Address" rows="6" class="font-size-20px font-Roboto-Mono"></textarea>
  </div>
  <div class="display-flex flex-direction-column margin-bottom-5px">
    <label asp-for="AccountsReceivableEmail" class="background-color-antiquewhite">Accounts receivable email</label>
    <input asp-for="AccountsReceivableEmail" class="font-size-20px font-Roboto-Mono" />
  </div>
  <div class="display-flex flex-direction-column margin-bottom-5px">
    <label asp-for="AccountsPayableEmail" class="background-color-antiquewhite">Accounts payable email</label>
    <input asp-for="AccountsPayableEmail" class="font-size-20px font-Roboto-Mono" />
  </div>
  <div class="display-flex flex-direction-column margin-bottom-5px">
    <label asp-for="AccountsReceivablePhone" class="background-color-antiquewhite">Accounts receivable phone</label>
    <input asp-for="AccountsReceivablePhone" class="font-size-20px font-Roboto-Mono" />
  </div>
  <div class="display-flex flex-direction-column margin-bottom-5px">
    <label asp-for="AccountsPayablePhone" class="background-color-antiquewhite">Accounts payable phone</label>
    <input asp-for="AccountsPayablePhone" class="font-size-20px font-Roboto-Mono" />
  </div>
  <div class="display-flex flex-direction-column margin-bottom-5px">
    <label asp-for="Website" class="background-color-antiquewhite">Website</label>
    <input asp-for="Website" class="font-size-20px font-Roboto-Mono" />
  </div>

  <button type="submit" class="full-width-regular-button">Update</button>
</form>

@if (Model != null && Model.ValidationResult != null)
{
  foreach (var error in Model.ValidationResult.Errors)
  {
    <div>
      <small class="color-red">@error.ErrorMessage</small>
    </div>
  }
}