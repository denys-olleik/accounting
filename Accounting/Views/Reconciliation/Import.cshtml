@model Accounting.Models.ReconciliationViewModels.ImportViewModel

@{
  ViewData["Title"] = "Reconciliation - Import - " + ConfigurationSingleton.Instance.ApplicationName;
}

@{
  string headerText = "Reconciliation import";
}
<partial name="_H1HeaderPartial" model="@headerText" />

<form asp-action="Import" asp-controller="Reconciliation" method="post" enctype="multipart/form-data" class="display-flex flex-direction-column margin-bottom-5px">
  <div class="display-flex margin-bottom-5px">
    <div class="flex-1 padding-5px background-color-antiquewhite">
      <label for="file" class="display-none"></label>
      <input type="file" id="file" name="file" class="form-control" required />
    </div>
  </div>
  <button type="submit" class="full-width-regular-button">Import reconciliation</button>
</form>

@if (Model != null && Model.ValidationResult != null)
{
  foreach (var error in Model.ValidationResult.Errors)
  {
    <div>
      <small class="color-red">@error.ErrorMessage</small>
    </div>
  }
  <div class="margin-bottom-5px">
  </div>
}